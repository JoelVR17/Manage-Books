<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header') %>
    <title>New Entry</title>
  </head>
  <body>
    <div class="container p-4">
      <form method="post" action="/new-entry" class="card card-body">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="title"
            id="title"
            placeholder="Enter a Title"
            autofocus
            required
          />
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          <input
            class="form-control"
            type="text"
            name="author"
            id="author"
            placeholder="Enter an Author"
            required
          />
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          <input
            class="form-control"
            type="text"
            name="image"
            id="image"
            placeholder="http://website.com"
            required
          />
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            name="description"
            id="description"
            rows="2"
            required
          ></textarea>
        </div>

        <input type="submit" value="Save Book" class="btn btn-success" />
        <a href="/" class="btn btn-dark my-1">Back</a>
      </form>
    </div>
  </body>
</html>
